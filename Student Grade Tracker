import java.util.*;

public class StudentGradeTracker {

    static class Student {
        String name;
        ArrayList<Integer> grades = new ArrayList<>();

        public Student(String name) {
            this.name = name;
        }

        public void addGrade(int grade) {
            grades.add(grade);
        }

        public double getAverage() {
            if (grades.isEmpty()) return 0;
            int sum = 0;
            for (int g : grades) sum += g;
            return (double) sum / grades.size();
        }

        public int getHighest() {
            return grades.stream().max(Integer::compareTo).orElse(0);
        }

        public int getLowest() {
            return grades.stream().min(Integer::compareTo).orElse(0);
        }

        @Override
        public String toString() {
            return name + " | Grades: " + grades + 
                   " | Avg: " + String.format("%.2f", getAverage()) +
                   " | High: " + getHighest() +
                   " | Low: " + getLowest();
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Student> students = new ArrayList<>();
        System.out.println("üìò Student Grade Tracker");

        while (true) {
            System.out.println("\n1. Add Student");
            System.out.println("2. Add Grade to Student");
            System.out.println("3. View Summary");
            System.out.println("4. Exit");
            System.out.print("Choose an option: ");
            int choice = scanner.nextInt(); scanner.nextLine();

            switch (choice) {
                case 1 -> {
                    System.out.print("Enter student name: ");
                    String name = scanner.nextLine();
                    students.add(new Student(name));
                    System.out.println("‚úÖ Student added.");
                }
                case 2 -> {
                    if (students.isEmpty()) {
                        System.out.println("‚ö† No students yet. Add one first.");
                        break;
                    }
                    for (int i = 0; i < students.size(); i++) {
                        System.out.println((i + 1) + ". " + students.get(i).name);
                    }
                    System.out.print("Select student (by number): ");
                    int idx = scanner.nextInt() - 1;
                    if (idx < 0 || idx >= students.size()) {
                        System.out.println("‚ùå Invalid student.");
                        break;
                    }
                    System.out.print("Enter grade: ");
                    int grade = scanner.nextInt();
                    students.get(idx).addGrade(grade);
                    System.out.println("‚úÖ Grade added.");
                }
                case 3 -> {
                    System.out.println("\nüìä Student Summary:");
                    for (Student s : students) {
                        System.out.println(s);
                    }
                }
                case 4 -> {
                    System.out.println("Goodbye!");
                    return;
                }
                default -> System.out.println("‚ùå Invalid choice.");
            }
        }
    }
}
